@page
@model ProjectWebApp.Pages.NewProjectModel
@{
    Layout = "_Layout";
}

<h2>Add New Project</h2>
<form class="row g-3" method="post">
    <div class="col-md-6">
        <label for="inputCode" class="form-label">Code</label>
        <input type="text" class="form-control" id="inputCode" name="txtCode">
    </div>
    <div class="col-md-6">
        <label for="inputPrName" class="form-label">Project Name</label>
        <input type="text" class="form-control" id="inputPrName" name="txtPrName">
    </div>
    <div class="col-md-6">
        <label for="inputStartDate" class="form-label">Start Date</label>
        <input type="date" class="form-control" id="inputStartDate" name="txtStartDate">
    </div>
    <div class="col-md-6">
        <label for="inputEndDate" class="form-label">End Date</label>
        <input type="date" class="form-control" id="inputEndDate" name="txtEndDate">
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cancel</button>
    </div>
</form>
